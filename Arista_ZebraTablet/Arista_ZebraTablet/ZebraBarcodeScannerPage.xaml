<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Arista_ZebraTablet.ZebraScannerPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Zebra Scanner" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Start Scan" Clicked="OnStartScanClicked" />
        <Button Text="Stop Scan" Clicked="OnStopScanClicked" />
        <CollectionView ItemsSource="{Binding Barcodes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Value}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
 
    