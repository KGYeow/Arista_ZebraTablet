<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Arista_ZebraTablet.ZebraBarcodeScannerPage"
>
    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Zebra Scanner" FontSize="24" HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Start Scan" Clicked="OnStartScanClicked" />
            <Button Text="Stop Scan"  Clicked="OnStopScanClicked" />
            <Button Text="Simulate"   Clicked="OnSimulateClicked" />
        </HorizontalStackLayout>

        <!-- Bind to the service's ObservableCollection -->
        <CollectionView ItemsSource="{Binding Results}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="{Binding Category}" FontSize="12" TextColor="Gray"/>
                        <Label Text="{Binding Value}" FontAttributes="Bold"/>
                        <Label Text="{Binding BarcodeType}" FontSize="12" TextColor="Gray"/>
                        <Label Text="{Binding ScannedTime, StringFormat='{}{0:HH:mm:ss}'}" FontSize="12" TextColor="Gray"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>