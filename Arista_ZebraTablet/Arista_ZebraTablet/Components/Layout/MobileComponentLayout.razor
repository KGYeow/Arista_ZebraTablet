@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="Theme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider Class="px-4 w-100"/>

<MudLayout>
    <!-- Main Content -->
    <MudMainContent Class="p-0">
        <!-- Page Content -->
        @Body
    </MudMainContent>
</MudLayout>

@code {
    // Define custom theme
    // Jabil Brand Portal: https://jabil.sharepoint.com/sites/JabilBrandPortal/ (Navigate to Brand Guidelines)
    [Parameter] public MyCustomTheme Theme { get; set; } = new MyCustomTheme();
}