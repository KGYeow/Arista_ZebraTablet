    private async Task EnableReorderModeForCompletedGroups()
    {
        Snackbar.Add($"Failed to prepare reorderable items: 0 line is error", Severity.Error);
        // Convert completed group barcodes to reorderable items
        try{
            
                Snackbar.Add($"Failed to prepare reorderable items: First line is error", Severity.Error);
                _reorderableItems = groupingService.CompletedGroups
        .SelectMany(g => g.BarcodesByCategory.Values)
        .OrderBy(b => PreferredCategoryOrder.IndexOf(b.Category) >= 0
            ? PreferredCategoryOrder.IndexOf(b.Category)
            : int.MaxValue)
        .ThenBy(b => b.ScannedTime)
        .Select(b => new DropBarcodeItem
            {
                Name = $"{b.Category}: {b.Value}",
                Selector = "1",
                Original = b
            })
        .ToList();
                Snackbar.Add($"Failed to prepare reorderable items: Last line error", Severity.Error);

        }
        catch(Exception ex)
        {
            Snackbar.Add($"Failed to prepare reorderable items: {ex.Message}", Severity.Error);
            return;
        }

        // Optional: store reorderable items in a shared service if needed
        // scanResultsService.ReorderItems = _reorderableItems;

        // ✅ Navigate to reorder page

        try{
            await App.Current.Windows[0].Page.Navigation.PushModalAsync(new ReorderPage(), true);
            

        }
        catch(Exception ex)
        {
            Snackbar.Add($"Failed to navigate to reorder page: {ex.Message}", Severity.Error);
        }
        
    }

    private void OnItemDropped(MudItemDropInfo<DropBarcodeItem> dropItem)
    {
        dropItem.Item.Selector = dropItem.DropzoneIdentifier;
        _reorderableItems = _reorderableItems.OrderBy(x => x.Selector).ToList();
        StateHasChanged();
    }

    public class DropBarcodeItem
    {
