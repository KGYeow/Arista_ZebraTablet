<MudOverlay Visible="Visible" LightBackground Absolute>
    <MudStack AlignItems="AlignItems.Center">
        <!-- Loading Indicator -->
        <MudProgressCircular
            Color="Color.Primary"
            StrokeWidth="4"
            Size="Size.Medium"
            Rounded
            Indeterminate
        />

        <!-- Loading Text -->
        <MudText Typo="Typo.body2">@Text</MudText>
    </MudStack>
</MudOverlay>